<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%> Post</div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <lable>Title</lable>
            <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <lable>Image</lable>
            <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
        </div>
        <div class="field">
            <textarea name="blog[body]" placeholder="Blog Post" ><%=blog.body%></textarea>
        </div>
        <input class="ui blue basic button large" type="submit">
    </form>
</div>
<% include partials/footer %>